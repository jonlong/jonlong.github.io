{
  "source": "./content",
  "destination": "./build",
  "metadata": {
    "blog": {
      "title": "Blog",
      "description": "Bloggerin"
    }
  },
  "plugins": {
    "metalsmith-drafts": true,
    "metalsmith-markdown": {
      "gfm": true
    },
    "metalsmith-collections": {
      "posts": {
        "pattern": "posts/*"
      }
    },
    "metalsmith-permalinks": {
      "pattern": ":title",
      "relative": false
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "./templates"
    }
  }
}
